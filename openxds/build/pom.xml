<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>openxds</artifactId>
    <groupId>org.openhealthtools.openxds</groupId>
    <version>1.2.1-SNAPSHOT</version>
  </parent>
  <groupId>org.openhealthtools.openxds</groupId>
  <artifactId>openxds-build</artifactId>
  <version>1.2.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>OpenXDS - Build</name>
  <url>https://openxds.projects.openhealthtools.org</url>
  
  <profiles>
      <profile>
          <id>build</id>
          <build>
              <plugins>
                  <plugin>
                      <groupId>org.apache.maven.plugins</groupId>
                      <artifactId>maven-antrun-plugin</artifactId>
                      <version>1.3</version>
                      <executions>
                          <execution>
                              <id>ant1</id>
                              <phase>install</phase>
                              <configuration>
                                  <tasks>
                                      <property name="project.version" value="${project.version}" />
                                      <ant dir="." target="build" />
                                  </tasks>
                              </configuration>
                              <goals>
                                  <goal>run</goal>
                              </goals>
                          </execution>
                          <execution>
                              <id>ant2</id>
                              <phase>clean</phase>
                              <configuration>
                                  <tasks>
                                      <property name="project.version" value="${project.version}" />
                                      <ant dir="." target="clean" />
                                  </tasks>
                              </configuration>
                              <goals>
                                  <goal>run</goal>
                              </goals>
                          </execution>
                      </executions>
                  </plugin>
              </plugins>
          </build>
      </profile>
      <profile>
          <id>dist</id>
          <build>
              <plugins>
                  <plugin>
                      <groupId>org.apache.maven.plugins</groupId>
                      <artifactId>maven-antrun-plugin</artifactId>
                      <version>1.3</version>
                      <executions>
                          <execution>
                              <id>ant1</id>
                              <phase>install</phase>
                              <configuration>
                                  <tasks>
                                      <property name="project.version" value="${project.version}" />
                                      <ant dir="." target="dist" />
                                  </tasks>
                              </configuration>
                              <goals>
                                  <goal>run</goal>
                              </goals>
                          </execution>
                          <execution>
                              <id>ant2</id>
                              <phase>clean</phase>
                              <configuration>
                                  <tasks>
                                      <property name="project.version" value="${project.version}" />
                                      <ant dir="." target="clean" />
                                  </tasks>
                              </configuration>
                              <goals>
                                  <goal>run</goal>
                              </goals>
                          </execution>
                      </executions>
                  </plugin>
              </plugins>
          </build>
      </profile>
  </profiles>
</project>
